<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bingie.Views.HistoryPage"
             Title="History">
    <StackLayout>
        <Label x:Name="CurrentDateLabel" />
        <Button Text="Previous Week" Clicked="OnPreviousWeekClicked" />
        <Button Text="Next Week" Clicked="OnNextWeekClicked" />
        <Grid x:Name="CalendarGrid" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*,*,*,*,*">
            <!-- Calendar days will be added here programmatically -->
        </Grid>
    </StackLayout>
</ContentPage>