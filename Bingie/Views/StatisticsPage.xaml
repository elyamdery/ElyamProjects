<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bingie.Views.StatisticsPage"
             BackgroundColor="White">

	<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
		<!-- Icon in the middle -->
		<Image Source="your_icon.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center"/>

		<!-- Binge Count Label -->
		<Label x:Name="BingeCountLabel"
               Text="Binge Count: 0"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,20,0,0" />
	</StackLayout>
</ContentPage>
